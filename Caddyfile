# Caddyfile for SPGlobalv1.0.2 application
# Replaces nginx.conf configuration

# Global options
{
    # Security headers
    servers {
        metrics
    }
}

# Redirect IP access to safepsy.com domain
51.159.179.75 {
    redir https://safepsy.com{uri} permanent
}

# Main site configuration for safepsy.com
safepsy.com {
    # Security headers
    header {
        X-Frame-Options "SAMEORIGIN"
        X-Content-Type-Options "nosniff"
        X-XSS-Protection "1; mode=block"
        Referrer-Policy "strict-origin-when-cross-origin"
    }

    # Serve static files from frontend with caching
    root * /app/frontend/dist
    file_server {
        hide .git
        hide .env
    }

    # API routes - proxy to backend
    handle /api/* {
        reverse_proxy spglobalv1-landing:3000 {
            header_up Host {host}
            header_up X-Real-IP {remote}
            header_up X-Forwarded-For {remote}
            header_up X-Forwarded-Proto {scheme}
        }
    }

    # Health check endpoint
    handle /health {
        reverse_proxy spglobalv1-landing:3000 {
            header_up Host {host}
            header_up X-Real-IP {remote}
            header_up X-Forwarded-For {remote}
            header_up X-Forwarded-Proto {scheme}
        }
    }

    # SPA routing - fallback to index.html for client-side routing
    handle {
        try_files {path} {path}/ /index.html
        file_server
    }

    # Cache static assets
    @static {
        path *.css *.js *.png *.jpg *.jpeg *.gif *.ico *.svg *.woff *.woff2 *.ttf *.eot
    }
    header @static Cache-Control "public, max-age=31536000, immutable"
}
