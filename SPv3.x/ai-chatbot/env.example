# =============================================================================
# SafePsy AI Chatbot - Environment Configuration
# =============================================================================

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
# Server port
PORT=3001

# Environment
NODE_ENV=development

# Frontend URL for CORS
FRONTEND_URL=http://localhost:3000

# =============================================================================
# AI SERVICE CONFIGURATION
# =============================================================================
# OpenAI API configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.7

# Alternative AI providers
ANTHROPIC_API_KEY=your_anthropic_api_key_here
GOOGLE_AI_API_KEY=your_google_ai_api_key_here

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# MongoDB connection
MONGODB_URI=mongodb://localhost:27017/safepsy-chatbot

# Redis connection
REDIS_URL=redis://localhost:6379

# =============================================================================
# BACKEND API CONFIGURATION
# =============================================================================
# Backend API URL
BACKEND_URL=http://localhost:3000
BACKEND_API_KEY=your_backend_api_key_here

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# JWT configuration
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=24h

# Encryption key
ENCRYPTION_KEY=your_encryption_key_here

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
# Log level
LOG_LEVEL=info

# Log file path
LOG_FILE_PATH=./logs/chatbot.log

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable/disable features
ENABLE_CONVERSATION_HISTORY=true
ENABLE_SENTIMENT_ANALYSIS=true
ENABLE_EMOTION_DETECTION=true
ENABLE_CRISIS_DETECTION=true

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================
# Sentry DSN for error tracking
SENTRY_DSN=your_sentry_dsn_here

# Analytics
GOOGLE_ANALYTICS_ID=your_ga_id_here

# Plausible Analytics Domain
PLAUSIBLE_DOMAIN=safepsy.com

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
# Crisis intervention services
CRISIS_HOTLINE_NUMBER=988
CRISIS_TEXT_LINE=741741

# Emergency contacts
EMERGENCY_CONTACT_1=911
EMERGENCY_CONTACT_2=your_emergency_contact

# =============================================================================
# PRIVACY CONFIGURATION
# =============================================================================
# IP hashing for privacy protection (default: OFF for maximum privacy)
IP_HASHING_ENABLED=false

# Salt for IP hashing (change in production!)
IP_SALT=default-privacy-salt-change-in-production

# Data retention
CONVERSATION_RETENTION_DAYS=30
ANONYMIZE_CONVERSATIONS=true

# GDPR compliance
GDPR_COMPLIANCE=true
USER_CONSENT_REQUIRED=true

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================
# Cache configuration
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# Request timeout
REQUEST_TIMEOUT=30000

# =============================================================================
# NOTES
# =============================================================================
# 1. Copy this file to .env and update with your actual values
# 2. Never commit the .env file to version control
# 3. Use different values for development, staging, and production
# 4. Regularly rotate API keys and secrets
# 5. Ensure all sensitive data is properly encrypted
