# SafePsy Landing Page Environment Configuration

# Copy this file to .env and update the values

# Server Configuration
PORT=3001
NODE_ENV=development

# Database Configuration
# SQLite file database (development)
DATABASE_URL="file:./dev.db"

# For production, use a more robust database:
# DATABASE_URL="postgresql://user:password@localhost:5432/safepsy"

# Frontend URL (for CORS configuration)
FRONTEND_URL=http://localhost:3000

# Privacy & Security
# IP hashing for privacy protection (default: OFF for maximum privacy)
IP_HASHING_ENABLED=false

# Generate a secure random salt for IP hashing
# Use: openssl rand -hex 32
IP_SALT=your-secure-random-salt-change-this-in-production

# Analytics (Optional)
# Leave empty to disable Plausible Analytics
PLAUSIBLE_DOMAIN=safepsy.com

# Email Configuration
# Enable confirmation email pipeline (default: false)
ENABLE_CONFIRMATION_EMAIL=false

# Production Configuration (uncomment for production)
# NODE_ENV=production
# DATABASE_URL="postgresql://user:password@localhost:5432/safepsy_prod"
# FRONTEND_URL=https://safepsy.com
# PLAUSIBLE_DOMAIN=safepsy.com
# IP_SALT=your-production-salt

# Staging Configuration (uncomment for staging)
# NODE_ENV=staging
# DATABASE_URL="postgresql://user:password@localhost:5432/safepsy_staging"
# FRONTEND_URL=https://staging.safepsy.com
# PLAUSIBLE_DOMAIN=staging.safepsy.com
# IP_SALT=your-staging-salt