# =============================================================================
# SafePsy DID Contracts - Polygon Amoy Configuration
# =============================================================================

# =============================================================================
# POLYGON AMOY TESTNET SETTINGS
# =============================================================================
# Primary RPC endpoint
POLYGON_AMOY_URL=https://rpc-amoy.polygon.technology

# Fallback RPC endpoint (Alchemy)
POLYGON_AMOY_FALLBACK_URL=https://polygon-amoy.g.alchemy.com/v2/YOUR_ALCHEMY_KEY

# Chain ID for Polygon Amoy
POLYGON_AMOY_CHAIN_ID=80002

# =============================================================================
# CONTRACT DEPLOYMENT
# =============================================================================
# Contract addresses on Polygon Amoy (update after deployment)
DID_REGISTRY_ADDRESS_AMOY=
DID_STORAGE_ADDRESS_AMOY=

# =============================================================================
# PRIVATE KEYS & WALLETS
# =============================================================================
# Private key for deployment and transactions
PRIVATE_KEY=your_private_key_here

# Wallet address
WALLET_ADDRESS=

# =============================================================================
# API KEYS & SERVICES
# =============================================================================
# Polygonscan API key for contract verification
POLYGONSCAN_API_KEY=your_polygonscan_api_key

# Alchemy API key
ALCHEMY_API_KEY=your_alchemy_api_key

# =============================================================================
# GAS CONFIGURATION
# =============================================================================
# Gas price settings (in gwei)
GAS_PRICE=20

# Gas limit for transactions
GAS_LIMIT=500000

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Development mode
NODE_ENV=development

# Debug mode
DEBUG=true

# Log level
LOG_LEVEL=info

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# Enable security features
ENABLE_SECURITY_CHECKS=true

# Rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=900000

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================
# Sentry DSN for error tracking
SENTRY_DSN=your_sentry_dsn

# =============================================================================
# NOTES
# =============================================================================
# 1. Copy this file to .env and update with your actual values
# 2. Never commit the .env file to version control
# 3. Use different values for development, staging, and production
# 4. Regularly rotate API keys and private keys
# 5. Use environment-specific configurations
