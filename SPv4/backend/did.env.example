# =============================================================================
# SafePsy DID Contracts - Environment Configuration
# =============================================================================

# =============================================================================
# BLOCKCHAIN NETWORK CONFIGURATION
# =============================================================================
# Network URLs (replace with your actual RPC endpoints)
POLYGON_AMOY_URL=https://rpc-amoy.polygon.technology
POLYGON_AMOY_FALLBACK_URL=https://polygon-amoy.g.alchemy.com/v2/YOUR_ALCHEMY_KEY

# Ethereum Sepolia (for testing)
SEPOLIA_URL=https://sepolia.infura.io/v3/YOUR_INFURA_KEY

# Polygon Mumbai (legacy testnet)
MUMBAI_URL=https://polygon-mumbai.infura.io/v3/YOUR_INFURA_KEY

# =============================================================================
# CONTRACT ADDRESSES
# =============================================================================
# Deployed contract addresses (update after deployment)
DID_REGISTRY_ADDRESS=
DID_STORAGE_ADDRESS=

# =============================================================================
# PRIVATE KEYS & WALLETS
# =============================================================================
# Private key for deployment and transactions (NEVER commit this!)
PRIVATE_KEY=your_private_key_here

# Wallet address (derived from private key)
WALLET_ADDRESS=

# =============================================================================
# API KEYS & SERVICES
# =============================================================================
# Etherscan/Polygonscan API keys for contract verification
ETHERSCAN_API_KEY=your_etherscan_api_key
POLYGONSCAN_API_KEY=your_polygonscan_api_key

# Alchemy API key (for enhanced RPC access)
ALCHEMY_API_KEY=your_alchemy_api_key

# Infura API key (for Ethereum/Polygon RPC)
INFURA_API_KEY=your_infura_api_key

# =============================================================================
# GAS CONFIGURATION
# =============================================================================
# Gas price settings (in gwei)
GAS_PRICE=20

# Gas limit for transactions
GAS_LIMIT=500000

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Development mode
NODE_ENV=development

# Debug mode
DEBUG=true

# Log level
LOG_LEVEL=info

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# Enable security features
ENABLE_SECURITY_CHECKS=true

# Rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=900000

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# MongoDB connection string
MONGODB_URI=mongodb://localhost:27017/safepsy-did

# Redis connection string
REDIS_URL=redis://localhost:6379

# =============================================================================
# IPFS CONFIGURATION
# =============================================================================
# IPFS gateway URL
IPFS_GATEWAY_URL=https://ipfs.io/ipfs/

# IPFS API endpoint
IPFS_API_URL=http://localhost:5001

# =============================================================================
# NOTIFICATION SETTINGS
# =============================================================================
# Email service configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================
# Sentry DSN for error tracking
SENTRY_DSN=your_sentry_dsn

# Google Analytics ID
GA_TRACKING_ID=your_ga_tracking_id

# =============================================================================
# BACKUP & RECOVERY
# =============================================================================
# Backup configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# =============================================================================
# COMPLIANCE & LEGAL
# =============================================================================
# GDPR compliance
GDPR_COMPLIANCE=true

# Data retention period (in days)
DATA_RETENTION_DAYS=2555

# =============================================================================
# NOTES
# =============================================================================
# 1. Copy this file to .env and update with your actual values
# 2. Never commit the .env file to version control
# 3. Use different values for development, staging, and production
# 4. Regularly rotate API keys and private keys
# 5. Use environment-specific configurations
